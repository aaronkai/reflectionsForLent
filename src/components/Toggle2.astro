<script>
  const radios = document.querySelectorAll('input[name="theme-toggle"]');
  const labels = document.querySelectorAll('div.theme-toggle label');
  const doc = document.firstElementChild;
  
  function toggleChecked() {
    labels.forEach( label => {
      label.classList.toggle("checked");
    })
  }
  // Set document variable to selected color-scheme and toggle label highlighting if necessary
  function toggleTheme() {
    doc.setAttribute("color-scheme", this.value);
    if (!Array.from(this.parentNode.classList).includes("checked")) {
      toggleChecked();
    } 
  }
  // Add event listener to each radio button, run toggleTheme on click
  radios.forEach( radio => {
    console.log({radio});
    radio.addEventListener('click', toggleTheme)
  } )

</script>
