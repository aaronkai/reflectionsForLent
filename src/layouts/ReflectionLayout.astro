---
import BaseLayout from '../layouts/BaseLayout.astro'
import {Debug} from 'astro/components'
const {content } =Astro.props;
const title = content.title || "reflection"
---
<!-- <Debug {content} /> -->
<BaseLayout title={title || "Day's Reflection"}>
  <head>
    <link rel="stylesheet" type="text/css" href={Astro.resolve('../styles/reflection.css')} />    
  </head>
  <div class="markdown">
    <header>
      <h1 class="text1">{content.title}</h1>
      <h2 class="text2 subtitle">{content.subtitle || ''}</h2>
      <h2 class="text2 scripture">{content.scripture}</h2>
    </header>
    <main class="markdown">
      <slot />
    </main>

  </div>
</BaseLayout>
